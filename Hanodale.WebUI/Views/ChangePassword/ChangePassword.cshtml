@using Hanodale.WebUI
@using System.Web.Optimization
@using Hanodale.Utility.Globalize
@model Hanodale.WebUI.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = null;
}
<!-- Hidden Field -->
<input type="hidden" id="required" value ="@Resources.MSG_REQUIRED">

<div id="content" style="opacity: 1; border: none">
<div class="row-flex">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-edit fa-fw "></i>
                @Resources.PAGE_HEADER_CREATE_USER
               
            </h1>
        </div>
    </div>


    <div class="formSpliter"></div>
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <!-- END ROW -->

        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-sortable" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" role="widget">
                    <!-- widget options:
				usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

				data-widget-colorbutton="false"
				data-widget-editbutton="false"
				data-widget-togglebutton="false"
				data-widget-deletebutton="false"
				data-widget-fullscreenbutton="false"
				data-widget-custombutton="false"
				data-widget-collapsed="true"
				data-widget-sortable="false"

				-->
                    @*  <header role="heading">
                        <div class="jarviswidget-ctrls" role="menu"><a href="javascript:void(0);" class="button-icon jarviswidget-toggle-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Collapse"><i class="fa fa-minus "></i></a><a href="javascript:void(0);" class="button-icon jarviswidget-fullscreen-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand "></i></a><a href="javascript:void(0);" class="button-icon jarviswidget-delete-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Delete"><i class="fa fa-times"></i></a></div>
                        <span class="widget-icon"><i class="fa fa-edit"></i></span>
                        <h2>Basic Form Elements </h2>

                        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                    </header>*@

                    <!-- widget div-->
                    <div role="content" style="border: none">

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->

                        <!-- widget content -->
                        <div class="widget-body no-padding" style="background-color: #f0f0f0">
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "validation-form", @class = "form-horizontal" }))
                            {  @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                
                                <fieldset>
                                    <div class="smart-form">
                                        @*<legend>@Resources.PAGE_HEADER_CREATE_USER</legend>
                                        <div id="message" class="alert alert-success" style="display: none"></div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.oldPassword, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })*@

                                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                              @*  @Html.LabelFor(model => model.firstName, new { @class = "", })*@
                                                <div class="clearfix">
                                                    <label class="input">
                                                        <i class="icon-append fa fa-desktop"></i>
                                                        @Html.EditorFor(model => model.oldPassword, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.oldPassword) })
                                                        @*<b class="tooltip tooltip-bottom-right">Needed to enter the website</b>*@
                                                        @Html.ValidationMessageFor(m => m.oldPassword)

                                                    </label>
                                                </div>
                                            </div>
                                        

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.newPassword, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })

                                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                @*@Html.LabelFor(model => model.lastName, new { @class = "", })*@
                                                <div class="clearfix">
                                                    <label class="input">
                                                        <i class="icon-append fa fa-desktop"></i>
                                                        @Html.EditorFor(model => model.newPassword, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.newPassword) })
                                                        @Html.ValidationMessageFor(m => m.newPassword)
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.newPassword, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })

                                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                @*@Html.LabelFor(model => model.userName, new { @class = "", })*@
                                                <div class="clearfix">
                                                    <label class="input">
                                                        <i class="icon-append fa fa-desktop"></i>
                                                        @Html.EditorFor(model => model.newPassword, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.newPassword) })
                                                        @Html.ValidationMessageFor(m => m.newPassword)
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                
                                    </div>
                                </fieldset>
                                
                                <footer>
                                    <div class="form-group">
                                        <div class="col-md-2"></div>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                            <button id="save-user" class="btn btn-sm btn-primary" type="button">
                                                <i class="fa fa-save"></i>
                                                @Resources.BTN_CHANGE_PASSWORD
                                            </button>
                                            <button class="btn btn-sm btn-primary" type="reset">
                                                <i class="fa fa-refresh"></i>
                                                @Resources.BTN_RESET
                                            </button>
                                           
                                        </div>
                                    </div>
                                </footer>
                            }


                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->



        </div>

      
    </section>



</div>


<script src="~/ProtectedScripts/web.changepassword.js"></script>
