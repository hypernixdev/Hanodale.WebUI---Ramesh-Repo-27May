@model Hanodale.WebUI.Models.AccessRightsModel
@using Hanodale.Utility.Globalize
@{
    Layout = null;
}
@if (Model.canView)
{
    <span class="view-calendarevent btn btn-ribbon " data-url="CALENDAREVENT_ID" title="View" data-rel="tooltip" data-placement="bottom" data-container="body">
        <i class="fa fa-eye "></i>
    </span>
}
@if (Model.canEdit)
{
    <span id="pencil" class="btn btn-ribbon edit-calendarevent" data-url="CALENDAREVENT_ID" data-placement="bottom" title="Edit" data-rel="tooltip">
        <i class="fa fa-pencil-square-o"></i>
    </span>
}
@if (Model.canDelete)
{
    <span id="trash" class="btn btn-ribbon delete-calendarevent" data-url="CALENDAREVENT_ID" data-placement="bottom" title="Delete" data-rel="tooltip">
        <i class="fa fa-trash-o "></i>
    </span>
}
