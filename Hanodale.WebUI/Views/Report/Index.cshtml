<script>
    $(function () {

        $(".report-description").click(function () {
            var Title = $(this).text();
            var _reportCode = $(this).attr("report-code");
            let currentPath = window.location.pathname;
            let basePath = currentPath.includes('HXPOS') ? '../HXPOS/' : '../';

            $.ajax({
                type: "POST",
                url: "Report/getReportContent?ReportId=" + $(this).attr("report-id"),
                data: {},
                cache: false,
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    //  var win = window.open("../GenerateReports.aspx?UserId=" + data.user_Id + "&&ReportId=" + data.totalRecords + "&&ReportName=" + Title, '_blank');//Title.replace(/\s/g, '')
                    var win = window.open(basePath + "GenerateReports.aspx?UserId=" + data.user_Id + "&&SubCostId=" + data.subCostId + "&&ReportId=" + data.totalRecords + "&&ReportName=" + Title + "&&ReportCode=" + _reportCode, '_blank');
                    if (win) {

                        //Browser has allowed it to be opened
                        win.focus();
                        win.onload = function () { this.document.title = Title.replace(/\s/g, ''); }
                    } else {
                        //Broswer has blocked it
                        alert('Please allow popups for this site');
                    }

                    //bootbox.dialog({
                    //    title: Title,
                    //    message: data.viewMarkup,
                    //    buttons: {
                    //        main: {
                    //            label: "Close",
                    //            callback: function () {

                    //            }
                    //        }
                    //    }
                    //}).addClass('report')

                  
                    var id = $('#user-id').val();
                    var reportid = $('#report-id').val();
                    url = basePath + "GenerateReports.aspx?UserId=" + 1 + "&&ReportId=" + 1 + "&&ReportName=" + Title.replace(/\s/g, '');
                    //  url = "../SampleReport.aspx?UserID=" + id;

                     console.log(url)
                    var myframe = document.getElementById("ifrmReportViewer");
                    if (myframe !== null) {
                        if (myframe.src) {
                            myframe.src = url;
                        }
                        else if (myframe.contentWindow !== null && myframe.contentWindow.location !== null) {
                            myframe.contentWindow.location = url;
                        }
                        else {
                            myframe.setAttribute('src', url);
                        }
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {

                }
            });
        });

    });
</script>
