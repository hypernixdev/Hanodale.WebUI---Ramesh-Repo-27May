@model Hanodale.WebUI.Models.AccessRightsModel
@using Hanodale.Utility.Globalize
@{
    Layout = null;
}

@if (Model.canView)
{
     <span class="view-adhocreport btn btn-ribbon " data-url="ADHOCREPORT_ID" title="View" data-rel="tooltip" data-placement="bottom" data-container="body">
        <i class="fa fa-eye"></i>
    </span>
    
    <a class="blue  btn btn-ribbon" href="/AdhocReport/DownloadAdhocReport/ADHOCREPORT_ID" title="Download" data-rel="tooltip" data-placement="bottom" data-container="body">
        <i class="fa fa-download "></i>
    </a>
}
@if (Model.canEdit)
{
    <span class="edit-adhocreport btn btn-ribbon "  data-url="ADHOCREPORT_ID" title="Edit" data-rel="tooltip" data-placement="bottom" data-container="body">
        <i class="fa fa-pencil-square-o"></i>
    </span>
}
@if (Model.canDelete)
{
    <span class="delete-adhocreport btn btn-ribbon " data-url="ADHOCREPORT_ID" title="Delete" data-rel="tooltip" data-placement="bottom" data-container="body">
        <i class="fa fa-trash-o "></i>
    </span>
}
