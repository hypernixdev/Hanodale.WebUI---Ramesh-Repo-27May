<script type="text/javascript">
    $(document).ready(function() {
        const readOnly = localStorage.getItem('readOnly');
     
        if (readOnly === 'True') {
            $('#orderApproval_ApprovalBy').prop('disabled', true);
            $('#orderApproval_ApprovalStatus').prop('disabled', true);
            $('#orderApproval_ApprovalDate').prop('disabled', true);
            $('#orderApproval_ApprovalDate_Time').prop('disabled', true);
            $('#approval_remarks').prop('disabled', true);
            $('#approveorder').hide();
            $('#rejectorder').hide();
        } else {
            $('#orderApproval_ApprovalBy').prop('disabled', false);
            $('#orderApproval_ApprovalStatus').prop('disabled', false);
            $('#orderApproval_ApprovalDate').prop('disabled', false);
            $('#orderApproval_ApprovalDate_Time').prop('disabled', false);
            $('#approval_remarks').prop('disabled', false);
            $('#approveorder').show();
            $('#rejectorder').show();
        }
    });
</script>
