@model Hanodale.WebUI.Models.AccessRightsModel
@using Hanodale.Utility.Globalize
@using Hanodale.WebUI
@using System.Web.Optimization
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!-- Hidden Variable -->
<input type="hidden" id="alert-delete" value ="@Resources.MSG_CONFIRM_DELETE">
<input type="hidden" class="mainPart" value="organizationemail" data-container="#d-org-email">
<input type="hidden" class="table-congif" data-active="true" value="organizationemail" data-columncount="4" data-button="true" data-condition="false" data-extended-event-btn="false"  data-filterId="@Model.elementId" data-edit-dest="#d-org-email" data-readOnly="@Model.readOnly" data-auto-hide-column="true" data-export-btn="true">
<input type="hidden" id="organization-id" value="@Model.elementId">
<!-- Hidden Variable -->

<!-- page-header -->

@*<div id="specificaindex">*@
<div class="row-flex">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-6">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-table fa-fw "></i>@Resources.PAGE_HEADER_MANAGE_ORGANISATIONEMAIL
        </h1>
    </div>
    @if (!@Model.readOnly)
    {
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-6">
            <ul id="sparks" class="">
                <li class="sparks-info">
                    <button id="create-organizationemail" data-url="OrganizationEmail/Create/@Model.elementId" class="btn btn-sm btn-primary" type="button" data-dest="#d-org-email">
                        <i class="fa fa-plus"></i>
                       @Resources.PAGE_HEADER_CREATE_EMAIL_CONFIGURATION
                    </button>
                </li>
            </ul>
        </div>
    }
</div>
<!-- page-header -->
<!-- page-content -->
<!-- widget grid -->
<div id="message" class="alert alert-success" style="display: none"></div>
<section id="widget-grid" class="">
    <!-- row -->
    <div class="row">
        <!-- NEW WIDGET START -->
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0"
                data-widget-editbutton="false"
                data-widget-deletebutton="false"
                data-widget-colorbutton="false"
                data-widget-sortable="false">
                <header>
                    <span class="widget-icon"><i class="fa fa-table"></i></span>
                    <h2>@Resources.ORGANIZATIONEMAIL_GRID_TITLE </h2>

                </header>

                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="dt_organizationemail" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th data-class="expand"><i class="fa fa-fw fa-pencil text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATIONEMAIL_DEPARTMENT_NAME</th>
                                    <th data-hide="phone,tablet"><i class="fa fa-fw fa-pencil text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_EMAILTO</th>
                                    <th data-hide="phone,tablet"><i class="fa fa-fw fa-pencil text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_EMAILFROM</th>
                                    <th class="table-column-header" style="width: 100px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>
<!-- /.page-content -->
@*</div>*@


<!-- Protected Script -->
@Scripts.Render(bundles.scripts.common_index)
<!-- Protected Script -->
