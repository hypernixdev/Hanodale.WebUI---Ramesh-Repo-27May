@model Hanodale.WebUI.Models.PlantModel
@using Hanodale.Utility.Globalize
@using Hanodale.WebUI
@using System.Web.Optimization
@{
    ViewBag.Title = "Create";
    Layout = null;
}

<!-- Hidden Variable -->
<input type="hidden" id="MSG_CONFIRM_SAVE" value="@Html.GetGlobalResource("MSG_CONFIRM_SAVE")">
<input type="hidden" id="MSG_CONFIRM_UPDATE" value="@Html.GetGlobalResource("MSG_CONFIRM_UPDATE")">
<input type="hidden" id="form-config" value="plant" data-readOnly="@Model.readOnly">
<!-- Hidden Variable -->

<div class="widget-body">
</div>

<div id="content" style="opacity: 1; border: none">
    <div class="row-flex">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-edit fa-fw "></i>

                @if (Model.isEdit && !Model.readOnly)
                {
                    @Html.GetGlobalResource("PAGE_HEADER_EDIT_PLANT")
                }
                else if (!Model.isEdit && !Model.readOnly)
                {
                    @Html.GetGlobalResource("PAGE_HEADER_CREATE_PLANT")
                }
                else if (Model.readOnly)
                {
                    @Html.GetGlobalResource("PAGE_HEADER_VIEW_PLANT")
                }
            </h1>
        </div>
    </div>

    <div class="formSpliter"></div>

    <!-- widget grid -->
    <section id="widget-grid">

        <div class="row">
            <div id="message" class="alert alert-success" style="display: none"></div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "validation-form", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.id)

                <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

                    <div class="jarviswidget jarviswidget-sortable" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">

                        <header role="heading">
                            <div class="jarviswidget-ctrls" role="menu">
                                <a href="javascript:void(0);" class="button-icon jarviswidget-fullscreen-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen">
                                    <i class="fa fa-expand"></i>
                                </a>
                            </div>
                            <span class="widget-icon"><i class="fa fa-edit"></i></span>
                            <h2>@Html.GetGlobalResource("PLANT_INFO")</h2>
                            <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                        </header>

                        <!-- widget div-->
                        <div role="content">

                            <div class="jarviswidget-editbox">
                                <!-- Dropdown edit box area -->
                            </div>

                            <!-- widget content -->
                            <div class="widget-body no-padding">
                                <fieldset>
                                    <div class="smart-form">

                                        @if (Model.company_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.company, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.company, new { @class = "form-control" + Model.company_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.company) })
                                                            @Html.ValidationMessageFor(m => m.company)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.name_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.name, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.name, new { @class = "form-control" + Model.name_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.name) })
                                                            @Html.ValidationMessageFor(m => m.name)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.plant_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.plant, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.plant, new { @class = "form-control" + Model.plant_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.plant) })
                                                            @Html.ValidationMessageFor(m => m.plant)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.address1_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.address1, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.address1, new { @class = "form-control" + Model.address1_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.address1) })
                                                            @Html.ValidationMessageFor(m => m.address1)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.address2_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.address2, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.address2, new { @class = "form-control" + Model.address2_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.address2) })
                                                            @Html.ValidationMessageFor(m => m.address2)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.city_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.city, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.city, new { @class = "form-control" + Model.city_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.city) })
                                                            @Html.ValidationMessageFor(m => m.city)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.state_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.state, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.state, new { @class = "form-control" + Model.state_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.state) })
                                                            @Html.ValidationMessageFor(m => m.state)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.zip_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.zip, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.zip, new { @class = "form-control" + Model.zip_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.zip) })
                                                            @Html.ValidationMessageFor(m => m.zip)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </fieldset>
                            </div>
                            <!-- end widget content -->
                        </div>
                        <!-- end widget div -->
                    </div>
                </article>
            }
        </div>
    </section>
</div>


<!-- Protected Script -->
@Scripts.Render(bundles.scripts.common_add_edit)
@Scripts.Render("~/bundles/jqueryval")
<!-- /.page-content -->