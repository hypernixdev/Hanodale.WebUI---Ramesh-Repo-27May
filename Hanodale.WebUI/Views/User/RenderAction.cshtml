@model Hanodale.WebUI.Models.AccessRightsModel
@using Hanodale.Utility.Globalize
@{
    Layout = null;
}

@if (Model.canView)
{
    <span class="viewuser btn btn-ribbon " data-url="USER_ID" data-rel="tooltip" title="View" data-placement="bottom" data-container="body">
        <i class="fa fa-eye "></i>
    </span>
}
@if (Model.canEdit && !Model.readOnly)
{
    <span class="edituser btn btn-ribbon " data-url="USER_ID" data-placement="bottom" title="Edit" data-rel="tooltip" data-container="body">
        <i class="fa fa-pencil-square-o"></i>
    </span>
}
@if (Model.canDelete && !Model.readOnly)
{
    <span class="delete-user btn btn-ribbon " data-url="USER_ID" data-placement="bottom" title="Delete" data-rel="tooltip" data-container="body">
        <i class="fa fa-trash-o "></i>
    </span>
}
@if (Model.canEdit && !Model.readOnly)
