@model string
@using Hanodale.Utility.Globalize
@using Hanodale.WebUI
@using System.Web.Optimization

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!-- Hidden Variable -->
<input type="hidden" id="required" value ="@Resources.MSG_REQUIRED">
<input type="hidden" id="readonly" value ="@Model">
<input type="hidden" id="MSG_CONFIRM_SAVE" value ="@Resources.MSG_CONFIRM_SAVE">
<input type="hidden" id="alert-delete" value ="@Resources.MSG_CONFIRM_DELETE">
<input type="hidden" id="alert-reset" value ="@Resources.MSG_RESET_PASSWORD_CONFIRM">
<input type="hidden" class="mainPart" value="filehistory" data-readonly="@Model">
<input type="hidden" class="table-congif" value="filehistory" data-columncount="5" data-button="true" data-condition="false" data-extended-event-btn="false" data-filterId="@Model" data-auto-hide-column="true" data-export-btn="true">
<!-- Hidden Variable -->

<div id="message" class="alert alert-success" style="display: none"></div>
<!-- /.PAGE-HEADER -->
<div class="row-flex page-title-button-side">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4 nPadding">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-table fa-fw "></i>@Resources.PAGE_HEADER_MANAGE_FILEHISTORY
        </h1>
    </div>
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8 row-flex page-title-button-side">
        <button id="btnback" class="btn btn-sm btn-primary" type="button" @(Convert.ToBoolean(Model)?"data-url=TrainingStaff/Index":"data-url=AttendanceStaff/Index")>
            <i class="fa fa-mail-reply"></i>
            @Resources.BTN_BACK
        </button>
    </div>
</div>
<!-- /.page-header -->

<div class="formSpliter"></div>

<!-- widget grid -->
<div class="row1">
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nPadding">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0"
                    data-widget-editbutton="false"
                    data-widget-deletebutton="false"
                    data-widget-colorbutton="false"
                    data-widget-sortable="false">
                    <header>
                        <span class="widget-icon"><i class="fa fa-table"></i></span>
                        <h2>@Resources.FILEHISTORY_GRID_TITLE</h2>

                    </header>

                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->

                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="dt_filehistory" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.FILEHISTORY_FILENAME</th>
                                        <th data-hide="phone,tablet"><i class="fa fa-fw fa-comment-o text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.FILEHISTORY_TOTALRECORDS</th>
                                        <th data-hide="phone,tablet"><i class="fa fa-fw fa-paper-plane-o text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.FILEHISTORY_UPLOADEDBY</th>
                                        <th data-hide="phone,tablet"><i class="fa fa-fw fa-comment-o text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.FILEHISTORY_UPLOADEDDATE</th>
                                        <th class="table-column-header" style="width: 100px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>

    </section>
</div>
<!-- /.page-content -->

<!-- Protected Script -->
@Scripts.Render(bundles.scripts.common_add_edit)
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render(bundles.scripts.common_index)
<!-- Protected Script -->
<script>
    $('#btnback').click(function () {
        var actionUrl = $(this).attr("data-url");
        navigate.view(actionUrl);
    });
</script>
