@model Hanodale.WebUI.Models.AccessRightsModel
@using Hanodale.Utility.Globalize
@{
    Layout = null;
}

@if (Model.canView)
{
   
    <a class="blue  btn btn-ribbon" href="/BusinessFile/DownloadBusinessFile/BUSINESSFILE_ID" title="Download" data-rel="tooltip" data-placement="bottom" data-container="body">
            <i class="fa fa-download "></i>
        </a>
}

@if (Model.canEdit && !Model.readOnly)
{
    <span class="edit-businessfile btn btn-ribbon " data-url="BUSINESSFILE_ID" data-placement="bottom" data-container="body">
        <i class="fa fa-pencil-square-o"></i>
    </span>
}
@if (Model.canDelete && !Model.readOnly)
{
    <span class="delete-businessfile btn btn-ribbon " data-url="BUSINESSFILE_ID" data-placement="bottom" data-container="body">
        <i class="fa fa-trash-o "></i>
    </span>
}

