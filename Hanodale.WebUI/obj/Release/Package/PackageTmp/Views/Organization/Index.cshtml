@model Hanodale.WebUI.Models.AccessRightsModel
@using Hanodale.Utility.Globalize
@using Hanodale.WebUI
@using System.Web.Optimization

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!-- Hidden Variable -->
<input type="hidden" id="alert-delete" value ="@Resources.MSG_CONFIRM_DELETE">
<input type="hidden" class="mainPart" value="organization">
<input type="hidden" class="table-congif" value="organization" data-columncount="7" data-button="true" data-condition="true" data-extended-event-btn="true" data-conditionid="8" data-hidebtn="true">


<!-- page-header -->
<div class="row-flex">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4 nPadding">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-table fa-fw "></i>@Resources.PAGE_HEADER_MANAGE_ORGANIZATION
        </h1>
    </div>
    @if (@Model.canAdd && !Model.readOnly)
    {
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
            <ul id="sparks" class="">
                <li class="sparks-info">
                    <button id="create-organization" data-url="Organization/Create/" class="btn btn-sm btn-primary" type="button">
                        <i class="fa fa-plus"></i>
                        @Resources.BTN_CREATE_ORGANIZATION
                    </button>

                    <button id="back-organization" data-url="Organization/Organization/" class="btn btn-sm btn-primary" type="button">
                        <i class="fa fa fa-mail-reply"></i>
                        @Resources.BTN_BACK
                    </button>
                </li>
            </ul>
        </div>
    }
</div>
<div class="formSpliter"></div>
<div id="message" class="alert alert-success" style="display: none"></div>
<!-- /.page-header -->

<!-- page-content -->
<section id="widget-grid" class="">
    <!-- row -->
    <div class="">
        <!-- NEW WIDGET START -->
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 nPadding">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0"
                data-widget-editbutton="false"
                data-widget-deletebutton="false"
                data-widget-colorbutton="false"
                data-widget-sortable="false">
                <header>
                    <span class="widget-icon"><i class="fa fa-table"></i></span>
                    <h2>@Resources.ORGANIZATION_GRID_TITLE</h2>

                </header>

                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="dt_organization" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th data-class="expand"><i class="fa fa-fw fa-pencil text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_NAME</th>
                                    <th data-hide="phone,tablet"><i class="fa fa-fw fa-file-text text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_PARENT_NAME</th>
                                    <th data-hide="phone,tablet"><i class="fa fa-fw fa-file-text text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_CATEGORY_NAME</th>
                                    <th data-hide="phone,tablet"><i class="fa fa-fw fa-file-text text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_DESCRIPTION</th>
                                    <th data-hide="phone,tablet"><i class="fa fa-fw fa-file-text text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_PREFIX</th>
                                    <th data-hide="phone,tablet"><i class="fa fa-fw fa-paper-plane text-muted hidden-md hidden-sm hidden-xs tableIcon"></i>@Resources.ORGANIZATION_STATUS</th>
                                    <th class="table-column-header"  style=""></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>
<!-- /.page-content -->

<!-- Protected Script -->
@Scripts.Render(bundles.scripts.common_index)
<style>
    table th.table-column-header {
        min-width: 130px!important;
    }
</style>
<script>
    _initActionExtended = function (partName, readOnly) {
        $('.add-organization').bind("click", function () {
            var actionUrl = "Organization/CreateSubCost/"
            var id = $(this).attr("data-url")
            var param = { id: id }
            if (actionUrl) {
                navigate.viewByParameter(actionUrl, param);
            }
        });


    }
</script>
