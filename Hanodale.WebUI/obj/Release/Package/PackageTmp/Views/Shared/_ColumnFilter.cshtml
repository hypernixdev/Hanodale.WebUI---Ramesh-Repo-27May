@model List<string>
@{
    Layout = null;
    int itemIndex = 0;
}
<div class="btn-toolbar" style="padding: 5px;">
    <div class="btn-group">
        <button data-toggle="dropdown" class="btn dropdown-toggle">
            Column Filter
						<span class="icon-caret-down icon-on-right"></span>
        </button>

        <ul class="dropdown-menu">

            @foreach (var item in @Model)
            {
                <li>
                    <label class="toggle-vis" data-column='@Model.IndexOf(item)'>
                        <input name="form-field-checkbox" class="ace" checked="checked" type="checkbox">
                        <span class="lbl">@item</span>
                    </label>
                </li>
            }

        </ul>
    </div>
