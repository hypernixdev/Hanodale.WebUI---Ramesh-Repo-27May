    <style type="text/css">
        fieldset div.validation-summary-errors ul {
            margin-bottom: 20px;
            color: red;
            list-style-type: none;
        }

        .carousel .item {
            left: 0 !important;
            -webkit-transition: opacity .4s; /*adjust timing here */
            -moz-transition: opacity .4s;
            -o-transition: opacity .4s;
            transition: opacity .4s;
        }

        .carousel-control {
            background-image: none !important; /* remove background gradients on controls */
        }
        /* Fade controls with items */
        .next.left,
        .prev.right {
            opacity: 1;
            z-index: 1;
        }

        .active.left,
        .active.right {
            opacity: 0;
            z-index: 2;
        }

        div.contactPanel {
            background-color: rgba(248,248,248,.9);
            border: 1px solid #404040;
        }

            div.contactPanel div div h5 {
                color: #017EC6;
            }

        div.jarviswidget .widget-body {
            min-height: inherit;
        }

        ol.carousel-indicators .active {
            background-color: orange;
        }

        ol.carousel-indicators span {
            border: 1px solid orange;
            display: inline-block;
            width: 10px;
            height: 10px;
            margin: 1px;
            text-indent: -999px;
            border: 1px solid #fff;
            border-radius: 10px;
            cursor: pointer;
            background-color: rgba(0,0,0,0);
        }

        /*html, body {
            background: none;
            background-image: linear-gradient(#050127, #0f0850);
        }*/

        .rfqSection {
            border-left: 2px solid #3276b1;
            list-style-type: none;
            justify-content: center;
            align-items: center;
        }

        .circleRFQParent {
            width: 90px;
            height: 88px;
            padding: 0;
        }

        .circleRFQ {
            color: #fff;
            font-weight: bold;
            border-radius: 50%;
            width: 90px;
            height: 88px;
            background-image: url("~/Content/Login/RFQBackground.png");
        }

        .circleRFQItem {
            align-items: center;
            justify-content: center;
            flex-flow: column;
        }

            .circleRFQItem p {
                margin: 0;
            }

        .circleRFQ h6 {
            margin: 0;
            color: #ff9900;
        }

        .circleRFQ h6, .circleRFQ span {
            font-family: "Calibri";
            font-size: 10px;
            font-style: italic;
        }

        #main[role="main"] {
        }

        .openidcontainer {
            border-top: 2px solid #d5d5d5;
            clear: both;
            margin: 0px auto;
            text-align: center;
        }

        .ortext {
            background: none repeat scroll 0 0 #fff;
            color: #666;
            font-size: 15px;
            font-weight: normal;
            padding: 0px 7px;
            height: 0px;
            text-transform: uppercase;
            display: block;
            margin: 0 auto;
            margin-top: -12px;
            width: 20px;
            height: 20px;
        }

        .fs_signin_options_txt {
            font-size: 16px;
            margin-top: 6px;
            color: #478ed8;
            cursor: pointer;
        }

        #myCarousel .carousel-control {
            font-size: 50px;
            opacity: 1;
        }

        article .jarviswidget > header {
            background-color: #4a80b1;
        }

        .easyPieChart .percent {
            color: #fff;
            font-size: 16px;
            font-weight: 700;
        }

        .easyPieChart {
            width: 50px;
            height: 50px;
            line-height: 45px;
            border-radius: 50%;
            display: inline-block;
        }

        span.easy-pie-title {
            font-size: 13px;
            font-weight: bold;
            height: 15px;
        }

        .show-stat-microcharts1 div.RFQPlaceHolder {
            text-align: center;
            margin-bottom: 3px;
        }

        #content.container {
            /*width: 70%!important;*/
            /*margin: 5% auto;*/
            max-width:initial!important;
            /*font-weight: bold;*/
            padding:0;
        }

