@model Hanodale.WebUI.Models.UserModel
@using Hanodale.Utility.Globalize
@{
    ViewBag.Title = "Profile";
    Layout = null;
}
<!-- Hidden Variable -->
<input type="hidden" id="alert-update" value ="@Resources.MSG_CONFIRM_UPDATE">

<!-- page-content -->
<div class="page-header">
    <h1>@Resources.PAGE_HEADER_PROFILE</h1>
</div>
<!-- /.page-header -->



<div class="col-xs-12 col-sm-3 center">
    <div>
        <span class="profile-picture">
            <img style="display: block;" id="avatar" class="editable img-responsive editable-click editable-empty" alt="Alex's Avatar" src="~/Content/avatars/profile-pic.jpg">
        </span>

        <div class="space-4"></div>

        <div class="width-80 badge badge-info label-xlg arrowed-in arrowed-in-right">
            <div class="inline position-relative">
                <a href="#" class="user-title-label dropdown-toggle" data-toggle="dropdown">
                    <i class="icon-circle light-green middle"></i>
                    &nbsp;
														
                    <span class="white">@Model.firstName  @Model.lastName</span>
                </a>

                <ul class="align-left dropdown-menu dropdown-caret dropdown-lighter">
                    <li class="dropdown-header">Change Status </li>

                    <li>
                        <a href="#">
                            <i class="icon-circle green"></i>
                            &nbsp;
																
                            <span class="green">Available</span>
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <i class="icon-circle red"></i>
                            &nbsp;
																
                            <span class="red">Busy</span>
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <i class="icon-circle grey"></i>
                            &nbsp;
																
                            <span class="grey">Invisible</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>


</div>

<div class="col-xs-12 col-sm-9">
    <form class="form-horizontal" id="user-profile" role="form">
            <div class="profile-user-info profile-user-info-striped">

                <div class="profile-info-row">
                    <div class="profile-info-name">
                        <label for="form-field-1">@Resources.PROFILE_NAME :</label>
                    </div>
                    <div class="profile-info-value">
                        <label for="form-field-1" id="name">@Model.firstName  @Model.lastName</label>
                    </div>
                </div>

                <div class="profile-info-row">
                    <div class="profile-info-name">
                        <label for="form-field-1">@Resources.PROFILE_EMAIL :</label>
                    </div>

                    <div class="profile-info-value">
                        <label for="form-field-1" id="email">@Model.email</label>
                    </div>
                </div>

                <div class="profile-info-row">
                    <div class="profile-info-name">
                        <label for="form-field-1">@Resources.PROFILE_LOGIN_ID :</label>
                    </div>

                    <div class="profile-info-value">
                        <label for="form-field-1" id="username">@Model.userName</label>
                    </div>
                </div>

                <div class="profile-info-row">
                    <div class="profile-info-name">
                        <label for="form-field-1">@Resources.PROFILE_LOCATION :</label>
                    </div>

                    <div class="profile-info-value">
                        <div id="faq-list-1" class="panel-group accordion-style1 accordion-style2">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a href="#faq-1-0" data-parent="#faq-list-0" data-toggle="collapse" class="accordion-toggle collapsed">
                                        <i class="icon-chevron-left pull-right" data-icon-hide="icon-chevron-down" data-icon-show="icon-chevron-left"></i>
                                        @Resources.PROFILE_VIEW_LOCATION
                                    </a>
                                </div>

                                <div class="panel-collapse collapse" id="faq-1-0">
                                    <div>
                                        <table id="tbl-user-rights-0" class="table table-striped table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>@Resources.PROFILE_CODE</th>
                                                    <th>@Resources.PROFILE_LOCATION</th>
                                                </tr>
                                            </thead>
                                           @* <tbody>
                                                <tr>
                                                    @foreach (var ulocation in @Model.use)
                                                    {
                                                        <tr>
                                                            <td style="width: 250px">@ulocation.Location.code</td>
                                                            <td>@ulocation.Location.locationName </td>
                                                        </tr>  
                                                    }
                                            </tbody>*@
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*<div class="profile-info-row">
                    <div class="profile-info-name">
                        <label for="form-field-1">@Resources.PROFILE_ROLE :</label>
                    </div>

                    <div class="profile-info-value">
                        <label for="form-field-1" id="rolename">@Model.UserRoles</label>
                    </div>
                </div>*@

               @* <div class="profile-info-row">
                    <div class="profile-info-name">
                        <label for="form-field-1">@Resources.PROFILE_LANGUAGE :</label>
                    </div>

                    <div class="profile-info-value">
                        @Html.DropDownListFor(model => model.language, new SelectList(Model.Languages, "ID", "Name", @Model.language), "-- Select --", new { @class = "width-25 chosen-select" })
                    </div>
                </div>*@
                <div class="profile-info-row">
                    <div></div>
                    <div class="profile-info-value">
                        <button class="btn btn-sm btn-primary" type="button" id="update-profile">@Resources.BTN_UPDATE</button>
                    </div>
                </div>
            </div>
        </form>
</div>


<div class="row">
    <div id="message" class="alert alert-success" style="display: none"></div>
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        
    </div>
</div>

<!-- /.page-content -->

<!-- Scripts -->
<script src="~/ProtectedScripts/pms.web.profile.js"></script>
