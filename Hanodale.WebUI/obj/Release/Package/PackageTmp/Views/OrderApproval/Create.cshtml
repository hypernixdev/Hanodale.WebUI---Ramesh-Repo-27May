@model Hanodale.WebUI.Models.OrderApprovalModel
@using Hanodale.Utility.Globalize
@using Hanodale.WebUI
@using System.Web.Optimization
@{
    ViewBag.Title = "Create";
    Layout = null;
}

<!-- Hidden Variable -->
<input type="hidden" id="MSG_CONFIRM_SAVE" value="@Html.GetGlobalResource("MSG_CONFIRM_SAVE")">
<input type="hidden" id="MSG_CONFIRM_UPDATE" value="@Html.GetGlobalResource("MSG_CONFIRM_UPDATE")">
<input type="hidden" id="form-congif" value="orderapproval" data-readOnly="@Model.readOnly">


<!-- Hidden Variable -->

<div class="widget-body">
</div>

<div id="content" style="opacity: 1; border: none">
    <div class="row-flex">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-edit fa-fw "></i>

                @if (Model.isEdit && !Model.readOnly)
                {
                    @Html.GetGlobalResource("PAGE_HEADER_EDIT_ORDERAPPROVAL")
                }
                else if (!Model.isEdit && !Model.readOnly)
                {
                    @Html.GetGlobalResource("PAGE_HEADER_CREATE_ORDERAPPROVAL")
                }
                else if (Model.readOnly)
                {
                    @Html.GetGlobalResource("PAGE_HEADER_VIEW_ORDERAPPROVAL")
                }
            </h1>
        </div>
    </div>


    <div class="formSpliter"></div>
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <div class="row">
            <div id="message" class="alert alert-success" style="display: none"></div>
            <form action="OrderApproval/SaveOrderApproval" method="post" id="validation-form" class="form-horizontal">


                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.order_Id)
                @Html.HiddenFor(model => model.isEdit)

                <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

                    <!-- Widget ID (each widget will need unique ID)-->
                    <!-- end widget -->

                    <div class="jarviswidget jarviswidget-sortable" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" style="" role="widget">

                        <header role="heading">
                            <div class="jarviswidget-ctrls" role="menu"><a href="javascript:void(0);" class="button-icon jarviswidget-fullscreen-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand "></i></a></div>

                            <span class="widget-icon"><i class="fa fa-edit"></i></span>
                            <h2>@Html.GetGlobalResource("ORDERAPPROVAL_INFO")</h2>
                            <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                        </header>

                        <!-- widget div-->
                        <div role="content">

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">


                                <fieldset>
                                    <div class="smart-form">


                                        @if (Model.orderNum_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.orderNum, "Order Num", new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.orderNum, new { @class = "form-control" + Model.orderNum_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.orderNum) })
                                                            @Html.ValidationMessageFor(m => m.orderNum)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (Model.CustomerName_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.CustomerName, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.CustomerName, new { @class = "form-control" + Model.CustomerName_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.CustomerName) })
                                                            @Html.ValidationMessageFor(m => m.CustomerName)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (Model.OrderDate_Metadata.visibilityInCreate)
                                        {<div class="form-group">
                                                @Html.LabelFor(model => model.OrderDate, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label" })

                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.OrderDate)
                                                            @Html.ValidationMessageFor(m => m.OrderDate)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (Model.OrderStatus_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.OrderStatus, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })
                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.OrderStatus, new { @class = "form-control" + Model.OrderStatus_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.OrderStatus) })
                                                            @Html.ValidationMessageFor(m => m.OrderStatus)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (Model.OrderTotal_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.OrderTotal, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })
                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.OrderTotal, new { id = "OrderTotal", @class = "form-control" + Model.OrderTotal_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.OrderTotal) })
                                                            @Html.ValidationMessageFor(m => m.OrderTotal)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (Model.CreatedBy_Metadata.visibilityInCreate)
                                        {
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.CreatedBy, new { @class = "col-xs-12 col-sm-3 col-md-3 col-lg-2 control-label", })
                                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
                                                    <div class="clearfix">
                                                        <label class="input">
                                                            <i class="icon-append fa fa-pencil"></i>
                                                            @Html.EditorFor(model => model.CreatedBy, new { @class = "form-control" + Model.CreatedBy_Metadata.mandatoryClass, @placeholder = @Html.DisplayNameFor(m => m.CreatedBy) })
                                                            @Html.ValidationMessageFor(m => m.CreatedBy)
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                      


                                    </div>
                                </fieldset>

                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                </article>


                <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

                    <!-- Widget ID (each widget will need unique ID)-->
                    <!-- end widget -->

                    <div class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable" id="wid-id-5" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" style="" role="widget">


                        <!-- widget div-->
                        <div role="content">

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body no-padding">
                                <footer id="btnSection">
                                    <div class="form-group">

                                        <div class="col-md-2"></div>
                                        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">

                                            @if (!@Model.readOnly)
                                            {
                                                <button id="update-orderapproval" class="btn btn-sm btn-primary" type="button" style="@(Model.isEdit ? "" : "display: none")">
                                                    <i class="fa fa-pencil"></i>
                                                    @Html.GetGlobalResource(Model.isEdit ? "BTN_UPDATE" : "BTN_SAVE")
                                                </button>
                                                <button class="btn btn-sm btn-primary" type="reset">
                                                    <i class="fa fa-refresh"></i>
                                                    @Html.GetGlobalResource("BTN_RESET")
                                                </button>
                                            }
                                            <button id="back-orderapproval" class="btn btn-sm btn-primary" type="button" data-url="OrderApproval/Index">
                                                <i class="fa fa-mail-reply"></i>
                                                @Html.GetGlobalResource("BTN_BACK")
                                            </button>
                                        </div>
                                    </div>
                                </footer>
                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                </article>

            </form>




        </div>

        <!-- END ROW -->
        <!-- NEW ROW -->
        <!-- END ROW-->

    </section>



</div>

