@model Hanodale.WebUI.Models.AccessRightsModel
@using Hanodale.Utility.Globalize
@{
    Layout = null;
}

@if ( Model.canView)
{
    <span class="view-news btn btn-ribbon " data-url="NEWS_ID" data-placement="bottom" data-rel="tooltip" title="View" data-container="body">
        <i class="fa fa-eye"></i>
    </span>
}
@if (!Model.readOnly && Model.canEdit)
{
    <span class="pencil edit-news btn btn-ribbon " data-url="NEWS_ID" data-placement="bottom" data-rel="tooltip" title="Edit" data-container="body">
         <i class="fa fa-pencil-square-o"></i>
    </span>
}
@if (Model.canDelete)
{
    <span class="trash delete-news btn btn-ribbon " data-url="NEWS_ID" data-placement="bottom" data-rel="tooltip" title="Delete" data-container="body">
        <i class="fa fa-trash-o "></i>
    </span>
}