@model Hanodale.WebUI.Models.UserModel
@using Hanodale.Utility.Globalize
@using Hanodale.WebUI
@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    .blackBtn {
        margin-bottom: 5px;
        padding: 4px 10px 4px 5px;
        background: #404040;
        border-color: #000;
        color: #fff;
    }

    .signInHeader {
        width: 100%;
        background-color: #fff!important;
        font-weight: bold;
        text-align: left;
        border: none;
        font-size: 16px;
        padding-top: 0;
        padding: 0px;
        text-align: center!important;
    }
</style>
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: center">
    <div id="loginContent" class="well no-padding" style="border: none; box-shadow: none;">
        @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post, new { id = "login-form", @class = "smart-form client-form" }))
        {
            @Html.AntiForgeryToken()
            <header class="signInHeader">
                <h2 style="font-weight: bold; margin: 20px 0;">@Resources.FORGOT_PASSWOD</h2>
            </header>

            <fieldset style="padding-top: 10px; text-align: left; width: 100%">
                @if (ViewBag.ErrorMessage != null)
                {
                    <span style="color: red;font-size: 14px">
                        @ViewBag.ErrorMessage
                    </span>
                }
                else if (ViewBag.Message != null)
                {
                    <span style="color: green;">
                        @ViewBag.Message
                    </span>
                }
                else
                {
                    @Html.ValidationSummary(true)
                }
                <section>

                    @Html.LabelFor(p => p.email)
                    <label class="input">
                        <i class="icon-append fa fa-envelope"></i>

                        @Html.TextBoxFor(p => p.email, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.email) })
                        @Html.ValidationMessageFor(p => p.email)
                        @*<input type="email" name="email">*@
                        @*   <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i>Please enter email address/username</b>*@

                    </label>
                </section>

                <section>
                    <div class="row-flex justify-content-between">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="text-align:center; margin-bottom:10px">
                            <button type="submit" class="btn btn-primary">
                                @Resources.SEND_ME_BTN
                            </button>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="text-align:center; margin-bottom:10px">
                            <a class="btn btn btn-danger" href="SignIn">@Resources.BACK_TO_LOGIN_PAGE</a>
                        </div>

                    </div>
                </section>


            </fieldset>
           

        }

    </div>
</div>


@*@Scripts.Render(bundles.scripts.common_add_edit)*@
@Scripts.Render("~/bundles/login-jqueryval")


