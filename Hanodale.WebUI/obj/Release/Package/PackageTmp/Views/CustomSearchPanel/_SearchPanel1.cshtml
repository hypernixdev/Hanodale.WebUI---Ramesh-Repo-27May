                                        <div class="clearfix">
                                            <label class="select">
                                                @Html.EditorFor(model => model.stockGroup_Id, new { @class = "form-control multipleSelect", dataValue = Model.lstStockGroup, setAll = true })
                                                @*<i></i>*@
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }
