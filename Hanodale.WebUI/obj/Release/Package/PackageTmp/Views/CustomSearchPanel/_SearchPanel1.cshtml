                                                <label class="input">
                                                    <i class="icon-append fa fa-calendar"></i>
                                                    @Html.EditorFor(model => model.createdDateFrom, new { @class = "datepicker form-control date-picker no-required" })
                                                </label>
                                            </div>
                                            <label class="col-xs-12 col-sm-2 col-md-2 col-lg-2 control-center-label control-label">@Resources.LABEL_TO</label>
                                            <div class="form-group col-xs-12 col-sm-5 col-md-5 col-lg-5 no-margin">
